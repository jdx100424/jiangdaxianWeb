<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
	 	<Socket name="Logstash" host="127.0.0.1" port="4560" protocol="TCP">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %p %C %d %L %m%n" />
        </Socket>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %p %C %d %L %m%n" />
		</Console>
		<RollingRandomAccessFile append="true"
			fileName="/logs/jiangdaxian-web/jiangdaxian-web.log"
			filePattern="/logs/jiangdaxian-web/jiangdaxian-web.log.%d{yyyy-MM-dd}_%i"
			immediateFlush="false" name="RollingFile">
			<PatternLayout>
				<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p %C %d %L %m%n</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<SizeBasedTriggeringPolicy size="50 MB" />
			</Policies>
		</RollingRandomAccessFile>
		<Async includeLocation="true" name="ASYNC">
			<AppenderRef ref="Console" />
			<AppenderRef ref="Logstash"/>
			<AppenderRef ref="RollingFile" />
		</Async>
	</Appenders>

	<Loggers>
		<Root level="info">
			<AppenderRef ref="ASYNC" />
		</Root>

		<logger additivity="false" level="info" name="com.jiangdaxian">
			<AppenderRef ref="ASYNC2" />
		</logger>
	</Loggers>
</Configuration>